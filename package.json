{
  "name": "booking-system",
  "version": "0.0.1",
  "description": "Scalable and High-Performance Booking System",
  "author": "Devlorvn",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/api-gateway/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/api-gateway/test/jest-e2e.json",
    "proto:generate": "cd libs/proto-definitions && buf generate",
    "proto:lint": "cd libs/proto-definitions && buf lint",
    "proto:format": "cd libs/proto-definitions && buf format -w",
    "proto:breaking": "cd libs/proto-definitions && buf breaking --against '.git#branch=main'",
    "proto:validate": "npm run proto:lint && npm run proto:format && npm run proto:breaking && npm run proto:generate",
    "proto:clean": "rm -rf libs/proto-definitions/src/generated && rm -rf apps/ticket-service/proto",
    "build:go": "cd apps/ticket-service && go build -v ./...",
    "build:ts": "npm run build",
    "build:all": "npm run proto:generate && npm run build && npm run build:go",
    "dev:setup": "npm install && cd apps/ticket-service && go mod tidy && npm run proto:generate && npm run db:setup",
    "db:setup": "node -e \"console.log('Please run: ./scripts/setup-db.sh (Linux/Mac) or .\\scripts\\setup-db.ps1 (Windows)')\""
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.13.4",
    "@grpc/proto-loader": "^0.8.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^10.3.2",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "bcrypt": "^6.0.0",
    "joi": "^17.13.3",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.25",
    "typeorm-transactional": "^0.5.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/google-protobuf": "^3.15.12",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.14.10",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "ts-proto": "^2.7.5",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/shared(|/.*)$": "<rootDir>/libs/shared/src/$1",
      "^@app/proto-definitions(|/.*)$": "<rootDir>/libs/proto-definitions/src/$1"
    }
  }
}
